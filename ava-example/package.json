{
  "name": "ava-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test ava | tap-difflet",
    "test-coverage": "cross-env NODE_ENV=test nyc ava | tap-difflet",
    "test-watch": "cross-env NODE_ENV=test nyc ava --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/register": "^7.0.0-beta.42",
    "ava": "^1.0.0-beta.3",
    "lint-staged": "^7.0.0",
    "nyc": "^11.6.0",
    "tap-difflet": "^0.7.1"
  },
  "dependencies": {
    "@std/esm": "^0.25.5",
    "cross-env": "^5.1.4"
  },
  "ava": {
    "files": [
      "test/**/*.{spec,test}.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/vendor/**"
    ],
    "sources": [
      "**/*.{js,jsx}",
      "!dist/**/*",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/vendor/**"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "verbose": true,
    "compileEnhancements": true,
    "require": [
      "@babel/register"
    ],
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.{spec,test}.js",
      "build"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@std/esm"
    ],
    "@std/esm": {
      "esm": "all",
      "cjs": true
    },
    "cache": false,
    "all": true,
    "report-dir": "./coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test-coverage && lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,css,scss,json,ts,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
