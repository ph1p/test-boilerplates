{
  "name": "jest-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "updateSnapshots": "cross-env NODE_ENV=test jest --updateSnapshot"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "lint-staged": "^10.2.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 50,
        "lines": 75,
        "statements": 75
      }
    },
    "bail": true,
    "verbose": true,
    "testURL": "http://localhost/",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "./coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "jest --lastCommit --coverage && lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,css,scss,json,ts,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
