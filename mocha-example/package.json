{
  "name": "jest-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha",
    "test-watch": "cross-env NODE_ENV=test mocha --watch",
    "test-coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text-summary mocha",
    "test-check-coverage": "npm run test-coverage && nyc check-coverage --lines 95 --functions 60 --branches 95"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0"
  },
  "dependencies": {
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "husky": "^0.15.0-rc.13",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test-check-coverage && lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,css,scss,json,ts,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
